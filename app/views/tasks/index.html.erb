<h1>Task Manager</h1>
<h3>List of your Tasks</h3>

<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
      <i class="fas fa-check"></i>
      <% else %>
      <i class="far fa-circle"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add Task', new_task_path %>
